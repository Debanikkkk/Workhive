{
   "name": "WorkHive APIs",
   "version": "0.0.1",
   "description": "WorkhiveServer",
   "type": "commonjs",
   "scripts": {
      "start": "ts-node src/index.ts",
      "build": "tsoa spec-and-routes && tsc && tsc-alias",
      "tsoa": "tsoa spec-and-routes",
      "lint": "eslint src/**/*.ts",
      "lint:fix": "eslint src/**/*.ts --fix",
      "typeorm": "typeorm-ts-node-commonjs",
      "typeorm:migrate": "typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
      "typeorm:revert": "typeorm-ts-node-commonjs migration:revert -d src/data-source.ts",
      "typeorm:generate": "typeorm-ts-node-commonjs migration:generate -d src/data-source.ts",
      "typeorm:create": "typeorm-ts-node-commonjs migration:create",
      "monitor": "concurrently \"nodemon\" \"tsoa spec-and-routes\"",
      "watch": "onchange 'src/**/*.ts' -- npm run monitor",
      "monitor:debug": "concurrently \"nodemon --inspect\" \"nodemon -x tsoa spec-and-routes\""
   },
   "devDependencies": {
      "@types/cors": "^2.8.17",
      "@types/express": "^4.17.21",
      "@types/jsonwebtoken": "^9.0.6",
      "@types/node": "^16.11.10",
      "@types/swagger-ui-express": "^4.1.6",
      "@typescript-eslint/eslint-plugin": "^7.0.2",
      "@typescript-eslint/parser": "^7.0.2",
      "concurrently": "^8.2.2",
      "eslint": "^8.56.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-prettier": "^5.1.3",
      "nodemon": "^3.0.3",
      "prettier": "^3.2.5",
      "prettier-eslint": "^16.3.0",
      "ts-node": "^10.9.1",
      "tsc-alias": "^1.8.8",
      "tsconfig-paths": "^4.2.0",
      "typescript": "^4.9.5"
   },
   "dependencies": {
      "body-parser": "^1.19.1",
      "cors": "^2.8.5",
      "dotenv": "^16.4.4",
      "express": "^4.17.2",
      "jsonwebtoken": "^9.0.2",
      "pg": "^8.11.3",
      "reflect-metadata": "^0.1.13",
      "swagger-ui-express": "^5.0.0",
      "tsoa": "^6.0.1",
      "typeorm": "0.3.19"
   }
}
